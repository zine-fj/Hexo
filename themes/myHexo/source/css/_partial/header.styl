.header {
    margin-top: 2em;
    display: flex;
    align-items: baseline;
    justify-content: space-between;

    .blog-title .logo {
        color: #aaa;
        font-size: 2em;
        font-family: "Comic Sans MS",cursive,LiSu,sans-serif;
        text-decoration: none;   
    }

    .menu {
        margin: 0;
        padding: 0;

        .menu-item {
            display: inline-block;
            margin-right: 10px;
        }
        .menu-item-link {
            color: #aaa;
            text-decoration: none;
            &:hover {
                color: #368ccb;
            }
        }
    }
}
